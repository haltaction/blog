<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="blog.user.provider.oauth.class">UserBundle\Security\User\Provider\OAuthUserProvider</parameter>
    </parameters>

    <services>
        <service id="blog.user.provider.oauth" class="%blog.user.provider.oauth.class%">
            <argument type="service" id="fos_user.user_manager" />
            <argument type="collection">
                <argument key="vk">oauthId</argument>
            </argument>
        </service>
    </services>
</container>