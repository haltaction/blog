{% extends 'BlogBundle::base.html.twig' %}

{% block login %}
<div class="row">
    <div class="col-md-6 login-wrapper">
        <h3>Login as admin</h3>

        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>

    </div>
    <div class="col-md-6">
        <h3>Login as user</h3>
        {% for owner in hwi_oauth_resource_owners() %}
            <a href="{{ hwi_oauth_login_url(owner) }}" class="btn btn-default">{{ owner | trans({}, 'HWIOAuthBundle') }}</a> <br />
        {% endfor %}
    </div>
</div>
{% endblock %}
