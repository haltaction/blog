{% extends "BlogBundle::base.html.twig" %}

{% block title %}Article:add{% endblock %}

{% block content %}
<h1>Создание новой статьи</h1>
    {{ form_start(form, {'attr': {'class': 'col-md-8'}}) }}
    {{ form_errors(form) }}
    <div class="form-group row req">
        {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group row req">
        {{ form_row(form.content, {'attr': {'class': 'form-control tinymce req'}}) }}
    </div>
    <div class="form-group row">
        {{ form_row(form.tags, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group row col-md-4 col-md-offset-4">
        {{ form_row(form.save, {'attr': {'class': 'form-control btn btn-success'}}) }}
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ tinymce_init({
        'theme': {'simple': {'menubar': 'edit view format',
                             'height': 300}
                 }
    }) }}
{% endblock %}